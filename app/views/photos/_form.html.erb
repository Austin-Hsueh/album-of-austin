<% if @photo.errors.present? %>
<ul>
	<% @photo.errors.each do |error, message| %>
	<li><%= "#{error.capitalize} #{message}" %></li>
	<% end %>
</ul>
<% end %>
<div class="form container">
		<%= form_for @photo do |f| %>
		<div class="form-group">
			<%= f.label :title, "Title" %>
			<%= f.text_field :title, class: "form-control"%>
		</div>	
		<div class="form-group">
			<%= f.label :date, "Date" %>
			<%= f.text_field :date, class: "form-control" %>
		</div>	
		<div class="form-group">
			<%= f.label :description, "Description" %>
			<%= f.text_area :description, class: "form-control" %>
		</div>	
		<div class="form-group">
			<%= f.label :file_location, "File Location" %>	
			<%= f.file_field :file_location%>

			<!-- <%= f.text_field :file_location %> -->
			<!-- 因為掛載了uploder，上傳方式更改為上傳檔案（原始是上傳文字，自己填入檔案位址），所以必須修改text_field成file_field 表示從文字欄位轉為檔案欄位-->
		</div>
		<%= f.submit %>
		<%=Time.now.to_s %>
	<% end %>	
</div>
